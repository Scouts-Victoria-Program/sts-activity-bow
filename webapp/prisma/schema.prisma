// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = "postgresql://stsbow:stsbow@postgres:5432/stsbow?schema=public"
  shadowDatabaseUrl = "postgresql://stsbow:stsbow@postgres:5432/stsbow_shadow?schema=public"
}

model Base {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  lat          Float?
  long         Float?
  locations    TrackerLocation[]
  actions      Action[]
}

model Tracker {
  id            Int          @id @default(autoincrement())
  name          String       @unique
  scoreModifier Float
  locations     TrackerLocation[]
}

model TrackerLocation {
  id            Int      @id @default(autoincrement())
  datetime      DateTime
  windowSize    Int
  scoreModifier Int
  lat           Float
  long          Float
  tracker       Tracker  @relation(fields: [trackerId], references: [id])
  trackerId     Int
  base          Base?    @relation(fields: [baseId], references: [id])
  baseId        Int?
  distance      Int
}

model Action {
  id          Int      @id @default(autoincrement())
  datetime    DateTime
  action      String
  score       Float
  description String
  base        Base     @relation(fields: [baseId], references: [id])
  baseId      Int
}
